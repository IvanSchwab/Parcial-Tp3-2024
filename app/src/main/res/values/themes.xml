<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ParcialTp32024" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="textAppearanceButton">@style/textAppearanceButton</item>
        <item name="materialButtonStyle"> @style/roundedButton</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.ParcialTp32024" parent="Base.Theme.ParcialTp32024" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_200</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_700</item>
        <item name="hintTextColor">@color/blue_700</item>"
    </style>

    <style name="roundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
        <item name="backgroundTint">@color/amber_500</item>
        <item name="android:paddingVertical">@dimen/spacing_md</item>
    </style>

    <style name="RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="TealBadge">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/teal_500</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>


    <style name="grayBadge">
        <item name="android:background">@color/black_200</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="textAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H1">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SectionHeader">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="Body1Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="Overline">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Light">
        <item name="android:textColor">@color/black_500</item>
    </style>



</resources>