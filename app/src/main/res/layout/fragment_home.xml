<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/paris_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Image of Paris -->
            <ImageView

                android:id="@+id/image_paris"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/paris" />

            <!-- Text "Paris" -->
            <TextView
                android:id="@+id/text_paris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="18dp"
                android:text="Paris"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Text "FROM" -->
            <TextView
                android:id="@+id/text_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="70dp"
                android:layout_marginEnd="18dp"
                android:text="FROM"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Price "$1299" -->
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="20dp"
                android:text="$1299"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Heart icon -->
            <ImageView
                android:id="@+id/icon_heart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                android:src="@drawable/favorite_home" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/paris_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/trending">

        <ImageView
            android:id="@+id/image_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base"
            android:layout_marginTop="22dp" />

        <ImageView
            android:id="@+id/image_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plane"
            android:layout_marginTop="-35dp"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:id="@+id/text_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight"
            android:textColor="#000000"
            android:fontFamily="@font/inter"
            android:textSize="15sp"
            android:layout_marginTop="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_flight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/text_trending_destinations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trending Destinations"
                android:fontFamily="@font/inter"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:fontFamily="@font/inter"
                android:textSize="14sp"
                android:textColor="#1262AE"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/firstHorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trending">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trending">

            <androidx.cardview.widget.CardView
                android:id="@+id/boracay_card"
                android:layout_width="145dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Image of Baros -->
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="105dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/boracay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boracay"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:text="Philippines"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/gray_background"
                        android:text="5D4N"
                        android:textColor="#4D5760"
                        android:layout_marginTop="-25dp"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/baros_card"
                android:layout_width="145dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Image of Baros -->
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="105dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baros" />

                    <!-- Text "Baros" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Baros"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Text "Maldives" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Maldives"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Text "Code: 1234" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/gray_background"
                        android:text="7D6N"
                        android:layout_marginTop="-25dp"
                        android:textColor="#4D5760"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bali_card"
                android:layout_width="145dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Image of Baros -->
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="105dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bali" />

                    <!-- Text "Baros" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Bali"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Text "Maldives" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Indonesia"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Text "Code: 1234" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/gray_background"
                        android:text="3D2N"
                        android:layout_marginTop="-25dp"
                        android:textColor="#4D5760"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/palawan_card"
                android:layout_width="145dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Image of Baros -->
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="105dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/palawan" />

                    <!-- Text "Baros" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Palawan"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Text "Maldives" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Philippines"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Text "Code: 1234" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/gray_background"
                        android:text="3D2N"
                        android:layout_marginTop="-25dp"
                        android:textColor="#4D5760"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_marginStart="16dp"
        android:id="@+id/offersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offers"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstHorizontalScrollView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/offersLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/mastercardOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md">

                <!-- Imagen de Mastercard -->
                <ImageView
                    android:id="@+id/masterCardLogo"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/mastercard" />

                <!-- Texto: "20% discount for mastercard users" -->
                <TextView
                    android:id="@+id/masterCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:layout_toEndOf="@id/masterCardLogo"
                    android:text="20% discount for Mastercard users"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Texto: "Limited time offer!" -->
                <TextView
                    android:id="@+id/limitedTimeOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masterCardTitle"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_toEndOf="@id/masterCardLogo"
                    android:text="Limited time offer!"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/visaOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_md">

                    <!-- Imagen de Mastercard -->
                    <ImageView
                        android:id="@+id/visaLogo"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/visa" />

                    <!-- Texto: "20% discount for mastercard users" -->
                    <TextView
                        android:id="@+id/visaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:layout_toEndOf="@id/visaLogo"
                        android:text="25% discount with Visa credit cards"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Texto: "Limited time offer!" -->
                    <TextView
                        android:id="@+id/limitedTimeOfferVisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/visaTitle"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:layout_toEndOf="@id/visaLogo"
                        android:text="Limited time offer!"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
